<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16sp"
            android:padding="12dp"
            android:letterSpacing="0.1"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/accent"
            app:rippleColor="#80FFFFFF"
            app:elevation="4dp"
            android:layout_margin="16dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="start"
            app:iconTint="#FFFFFF"
            app:iconPadding="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/poseImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:padding="16dp"/>

                <TextView
                    android:id="@+id/sanskritNameTextView"
                    style="@style/PoseDetailTitle"
                    android:textColor="#2196F3"/>

                <TextView
                    android:id="@+id/englishNameTextView"
                    style="@style/PoseDetailSubtitle"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/descriptionTextView"
                    style="@style/PoseDetailContent"/>

                <TextView
                    android:id="@+id/benefitsTextView"
                    style="@style/PoseDetailContent"/>

                <TextView
                    android:id="@+id/timeTextView"
                    style="@style/PoseDetailHighlight"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/learnButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="#4CAF50"
                        app:icon="@drawable/ic_learn"
                        app:iconGravity="start"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textSize="16sp"
                        android:padding="12dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="#FF5722"
                        app:icon="@drawable/ic_timer"
                        app:iconGravity="start"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
